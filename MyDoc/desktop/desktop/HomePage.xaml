<Page x:Class="desktop.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:desktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <Grid>
        <!-- Main Content (Below Taskbar) -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>

            <!-- First Column (Text Content) -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBlock Text="Welcome to MyDoc" FontSize="26" FontWeight="Bold" Foreground="#0078D7"/>

                <TextBlock Text="Your one-stop destination for health and wellness." 
                           FontSize="14" Margin="0,5,0,0" TextWrapping="Wrap"/>

                <TextBlock Text="Find trusted doctors, locate nearby hospitals, and book appointments effortlessly." 
                           FontSize="14" Margin="0,5,0,0" TextWrapping="Wrap"/>
                <TextBlock 
                    Text="Experience healthcare like never before – tailored, accessible, and convenient." 
                    FontSize="14" Margin="0,5,0,0" TextWrapping="Wrap"/>

                <Button Content="Find Doctors" Width="150" Height="30" Background="#0078D7" Foreground="White" FontSize="14" HorizontalAlignment="Left" Margin="0,20,0,0"
                        Click="FindDoctorsButton_Click"/>
            </StackPanel>

            <!-- Second Column (Image) -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <Image Source="C:\Users\ASUS\Documents\GUI Project\MyDoc\desktop\desktop\assets\doctor.png" Width="250" Height="250" Stretch="Uniform"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
